<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/about_rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/heading_rel"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_above="@+id/logo1_rel"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="10dp"
            android:background="#585188"
            android:padding="10dp">

            <TextView
                android:id="@+id/heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="10dp"
                android:text="@string/aboutheader"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="20sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/text_rel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/info_app"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:padding="10dp">

            <TextView
                android:id="@+id/infotext1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/layoutMain_dialog_info2"
                android:textColor="#000"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/infotext2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/infotext1"
                android:gravity="center"
                android:text="@string/layoutMain_dialog_info1"
                android:textColor="#000"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/infotext3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/infotext2"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:text="@string/creators_list"
                android:textColor="#000"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/infotext4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/infotext3"
                android:gravity="center"
                android:text="@string/nepsylink"
                android:textColor="#0B0080"
                android:textSize="11sp" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/logo3_rel"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_above="@+id/text_rel"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <ImageView
                android:id="@+id/tamklogo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/tikologo"
                android:src="@drawable/tamklogo" />

            <ImageView
                android:id="@+id/tikologo"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/tikologofin" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/logo1_rel"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_below="@+id/info_app"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/tamperelogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vaakunatampere" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bottom_rel"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#585188"
            android:padding="15dp">

            <TextView
                android:id="@+id/action_ok"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/quit_button"
                android:gravity="center"
                android:minWidth="100sp"
                android:text="@string/okBtn_text"
                android:textColor="#000"
                android:textSize="20sp" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>